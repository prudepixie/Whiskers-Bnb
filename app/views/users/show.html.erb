Current User Id:
<div id="user-id"><%= current_user.id %></div>
<% if @user.guest? %>
  <h3>WELCOME GUEST</h3>
  Guest Id: <div id="guest-id"><%= @user.id %></div>
<% else %>
  <h3>WELCOME Host</h3>
  Host Id: <div id="host-id"><%= @user.id %></div>
<% end %>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @user.phone %>
</p>

<p>
  <strong>City:</strong>
  <%= @user.city %>
</p>

<p>
  <strong>Address:</strong>
  <%= @user.address %>
</p>



<div id="reservation"></div>


<% if current_user == @user %>
